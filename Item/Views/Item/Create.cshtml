@model ItemModel

<h1>Create new item</h1>

<form asp-action="Create">
    <div>
        <label>Name:</label>
        <input asp-for="Name" />
    </div>
    <div>
        <label>Quantity:</label>
        <input asp-for="Quantity" type="number"/>
    </div>
    <button type="submit">Create</button>
</form>

